{% extends 'base.html.twig' %}

{% block title %}Wishes{% endblock %}

{% block body %}
    <h1>Tous les souhaits existants chez nous (page #{{ currentPage }}) :</h1>

    <div class="content has-text-centered">
        {% if (currentPage > 1) %}
        <a class="button" href="{{ path('wish_list', {'page': currentPage-1}) }}">Page précédente</a>
        {% endif %}

        {% if ((currentPage * 20) < totalResultCount) %}
        <a class="button" href="{{ path('wish_list', {'page': currentPage+1}) }}">Page suivante</a>
        {% endif %}
    </div>

    <ul>
        {% for wish in wishes %}
        <li><a href="{{ path('wish_detail', {id: wish.id}) }}"> {{ wish.title }} ({{ wish.categorie.libelle }}) </a></li>
        {% else %}
            <div>Rien à proposer !</div>
        {% endfor %}
    </ul>
{% endblock %}
