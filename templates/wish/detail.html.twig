{% extends 'base.html.twig' %}

{% block body %}
    <h1><strong>{{ wish.title }}</h1></strong>
    <p>Dans la catégorie {{ wish.categorie.libelle }}</p>
    <br>
    {% if wish.description %}
        <h2>Les détails du souhait de {{ wish.author }}, le {{ wish.dateCreated|date ('d/m/Y H:i') }}:</h2>
        <p>{{ wish.description }}</p>
    {% endif %}
    <br>
    <section>
        <h3>Donner votre réaction/avis/commentaire :</h3>
        {{ form_start(reacForm) }}
            {{ form_widget(reacForm) }}
            <br>
            <button>Réagir !</button>
        {{ form_end(reacForm) }}

    </section>
    <br>
    <section>
        <h3>Liste des commentaires sur ce souhait :</h3>
        <br>

        {% for reaction in wish.reactions %}
            <article>
                <p>{{ reaction.message }}</p>
                <p>Par {{ reaction.username }}, le {{ reaction.dateCreated|date ('d,m,Y H:i') }}</p>
            </article>
            <br>
        {% else %}
            <p>Soyez le premier à réagir !</p>
        {% endfor %}
    </section>
{% endblock %}

{% block title %}
    Souhait {{ wish.id }}
{% endblock %}

