<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BucketList!{% endblock %}</title>

        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Syne+Mono&display=swap" rel="stylesheet">

        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>


        <link rel="icon" href="{{ asset('img/favicon.png') }}">
    </head>

    <body>
    <div class="container">
        <header class="row container">
            <div class="row logo">
                <a class="col-1 text-secondary" style="text-decoration-line: none" href="{{ path('main_home') }}">
                    <img class="img-thumbnail" src="{{ asset('img/list-icon-redim.jpg') }}">
                    <h1>BucketList</h1>
                </a>
            </div>
            <div class="nav row justify-content-between">
                <span class="row col-6">
                    <a class="nav-link col text-info text-center" href="{{ path('main_about_us') }}">About Us</a>

                    <a class="nav-link col text-info text-center" href="{{ path('wish_list') }}">Choix de souhaits</a>

                    <a class="nav-link col text-info text-center" href="{{ path('wish_create') }}">Add a wish</a>
                </span>
                <span class="row col-3">
                    {% if (app.user) %}
                        <a class="nav-link text-info col text-center" href="{{ path('app_logout') }}"><strong>Log out ({{ app.user.username }})</strong></a>
                    {% else %}
                        <a class="nav-link text-info col text-center" href="{{ path('app_register') }}"><strong>Register</strong></a>
                        <a class="nav-link text-info col text-center" href="{{ path('app_login') }}"><strong>Log in</strong></a>
                    {% endif %}
                </span>
            </div>
        </header>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="container">
                    <div class="flash flash-{{ label }}">
                        <strong>{{ message }}</strong>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <main>
            <div class="row">
                {% block body %}{% endblock %}
            </div>
        </main>
        <footer>
            <div class="row text-center">
                <p>
                    &copy;<strong>BucketList</strong> {{'now'|date('Y') }}
                </p>
            </div>
        </footer>
    </div>
    </body>

</html>
