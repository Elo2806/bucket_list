<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BucketList!{% endblock %}</title>

        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Syne+Mono&display=swap" rel="stylesheet">

        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>


        <link rel="icon" href="{{ asset('img/favicon.png') }}">
    </head>

    <body>
    <div class="container">
        <header class="row">

                <a class="col" href="{{ path('main_home') }}">
                    <!--<img src="{{ asset('img/list-logo.png') }}">-->
                    <h1>BucketList</h1>
                </a>

                <a class="col" href="{{ path('main_about_us') }}">About Us</a>

                <a class="col" href="{{ path('wish_list') }}">Choix de souhaits</a>

                <a class="col" href="{{ path('wish_create') }}">Add a wish</a>

                {% if (app.user) %}
                    <a class="col" href="{{ path('app_logout') }}"><strong>Log out</strong></a>
                {% else %}
                    <a class="col" href="{{ path('app_register') }}"><strong>Register</strong></a>
                    <a class="col" href="{{ path('app_login') }}">Log in</a>
                {% endif %}

        </header>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="container">
                    <div class="flash flash-{{ label }}">
                        <strong>{{ message }}</strong>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <main>
            <div class="row">
                {% block body %}{% endblock %}
            </div>
        </main>
        <footer>
            <div class="row">
                <p>
                    &copy;<strong>BucketList</strong> {{'now'|date('Y') }}
                </p>
            </div>
        </footer>
    </div>
    </body>

</html>
